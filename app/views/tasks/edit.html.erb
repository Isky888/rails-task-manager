<h1>Edit <%=@task.title%>!</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit %>
<% end %>

<% if @task.completed == true %>
  <%= button_to 'Uncomplete', uncomplete_path(@task), data: {turbo_method: :post}%>
<% else %>
  <%= button_to 'Complete', complete_path(@task), data: {turbo_method: :post}%>
<% end %>
